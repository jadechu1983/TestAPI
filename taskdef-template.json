{
    "taskRoleArn": "arn:aws:iam::678330063449:role/ecsTaskRole",
    "executionRoleArn": "arn:aws:iam::678330063449:role/ecsTaskExecutionRole",
    "containerDefinitions": [
        {
            "name": "oneapp-ux-api-1",
            "image": "<IMAG_UXAPI1_NAME>",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 3000,
                    "protocol": "tcp",
                    "containerPort": 3000
                }
            ],
            "environment": [
                {
                    "name": "SC_CUSTOMER_API_BASE_URL",
                    "value": "<SC_CUSTOMER_API_BASE_URL>"
                },
                {
                    "name": "NODE_ENV",
                    "value": "production"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "ecs-ux-api-1",
                    "awslogs-region": "ap-northeast-1",
                    "awslogs-stream-prefix": "ux-api"
                }
            }
        },
        {
            "name": "xray-daemon",
            "image": "amazon/aws-xray-daemon",
            "cpu": 32,
            "memoryReservation": 256,
            "portMappings": [
                {
                    "hostPort": 2000,
                    "containerPort": 2000,
                    "protocol": "udp"
                }
            ],
            "environment": [
                {
                    "name": "AWS_XRAY_DAEMON_ADDRESS",
                    "value": ""
                },
                {
                    "name": "AWS_XRAY_DEBUG_MODE",
                    "value": "true"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "ux-api-1-xray",
                    "awslogs-region": "ap-northeast-1",
                    "awslogs-stream-prefix": "ux-api-xray"
                }
            }
        }
    ],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "networkMode": "awsvpc",
    "cpu": "256",
    "memory": "512",
    "family": "ux-api-1"
}